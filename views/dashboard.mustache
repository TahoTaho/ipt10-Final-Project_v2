<div class="row">
    <!-- Display Highest Selling Products -->
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Highest Selling Products</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Total Sales</th>
                                <th>Total Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#highest_selling_products}}
                            <tr>
                                <td>{{product_name}}</td>
                                <td>{{total_sales}}</td>
                                <td>{{total_quantity}}</td>
                            </tr>
                            {{/highest_selling_products}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Display Latest Sales -->
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Latest Sales</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Product Name</th>
                                <th>Date</th>
                                <th>Total Sale</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#latest_sales}}
                            <tr>
                                <td>{{sequence}}</td>
                                <td>{{product_name}}</td>
                                <td>{{date}}</td>
                                <td>{{total_sale}}</td>
                            </tr>
                            {{/latest_sales}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Display Recently Added Products -->
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recently Added Products</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Photo</th>
                                <th>Product Title</th>
                                <th>Category</th>
                                <th>Selling Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#recent_products}}
                            <tr>
                                <td>{{sequence}}</td>
                                <td>
                                    <!-- Displaying product image -->
                                    <img 
                                        src="/views/uploads/products/{{image_file}}" 
                                        alt="{{product_name}}" 
                                        width="50" 
                                        height="50"
                                    >
                                </td>
                                <td>{{product_name}}</td>
                                <td>{{category_name}}</td>  <!-- Display category name -->
                                <td>{{sale_price}}</td>
                            </tr>
                            {{/recent_products}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
